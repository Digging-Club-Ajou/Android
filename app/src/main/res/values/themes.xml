<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiggingClub" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/secondaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:buttonStyle">@style/PretendardButtonStyle</item>
        <item name="android:editTextStyle">@style/PretendardEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/PretendardRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/PretendardCheckboxStyle</item>
        <item name="android:textViewStyle">@style/PretendardTextViewStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PretendardTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="PretendardButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="PretendardEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="PretendardRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="PretendardCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="Theme.DiggingClub.Splash" parent="Theme.SplashScreen">
<!--        <item name="windowSplashScreenBackground">@color/primaryColor</item>-->
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen</item>-->
<!--        <item name="android:windowBackground">@drawable/splashscreen</item>-->
    </style>
    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>