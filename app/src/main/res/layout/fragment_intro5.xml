<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.fragments.IntroFragment5">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="26dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="321dp"
        android:layout_height="180dp"
        android:src="@drawable/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:gravity="top"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="3sp"
        android:text="취향 분석 완료!"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:translationY="-1.6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkImg" />
    <TextView
        android:id="@+id/welcome"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="3sp"
        android:text="\@id_example 님의 가입을 환영합니다."
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:translationY="-1.6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="3sp"
        android:layout_marginTop="5sp"
        android:text="이제 디글과 함께 취향을 공유하고 기록할 수 있습니다."
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:translationY="-1.6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_2"
        android:text="시작하기"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>